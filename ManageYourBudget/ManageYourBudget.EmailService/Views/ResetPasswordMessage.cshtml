@using RazorLight
@inherits TemplatePage<ManageYourBudget.EmailMessages.ResetPasswordMessage>
<html>
<head>
    <style>
        .reset-button {
            display: block;
            width: 150px;
            height: 25px;
            background: aqua;
            padding: 10px;
            text-align: center;
            border-radius: 5px;
            color: white;
            font-weight: bold;
            cursor: pointer;
            margin-top: 30px;
            margin-bottom: 30px
        }
    </style>
</head>
<body>
    <h2>Somebody requested a reseting  a password to your account</h2>
    <div>You can reset your password by clicking the following button:</div>
    @if (Model.CanBeResetInternally)
    {
        <table>
            <tbody>
                <tr>
                    <td style="width: 100px"></td>
                    <td><a class="reset-button" href="@Model.Link">Reset password</a></td>
                </tr>
            </tbody>
        </table>
    }
    else
    {
        <div style="margin-top: 15px; margin-bottom: 15px">but.. we are unable reset your password, it's controller by the external provider like Facebook or Google</div>
    }
    <div><strong>If it was not you, please ignore this message</strong></div>
</body>
</html>

